{
  "name": "tms-nlops-demo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "npm run lint && npm run format:check && npm run type-check",
    "setup": "npm install && npm run prepare",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:init": "node scripts/init-database.js",
    "prepare": "husky install",
    "commit": "git-cz",
    # API文档和测试脚本
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest __tests__/unit",
    "test:integration": "jest __tests__/api",
    "test:api": "npm run test:integration",
    "test:e2e": "npm run test:integration",
    "test:performance": "node tests/performance/performance-test.js",
    "test:ci": "npm run test:coverage && npm run test:integration",
    "generate:docs": "tsx scripts/generate-docs.ts",
    "docs:serve": "npm run generate:docs && npx serve public/api-docs",
    "api:health": "curl http://localhost:3000/api/health",
    "api:validate": "tsx scripts/validate-api.ts",
    "performance:load": "artillery run tests/performance/load-test.yml",
    "performance:stress": "artillery run tests/performance/stress-test.yml",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build",
    "docker:test:clean": "docker-compose -f docker-compose.test.yml down -v"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.89.0",
    "@types/supertest": "^6.0.3",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "openapi-types": "^12.1.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "supertest": "^7.1.4",
    "swagger-ui-dist": "^5.29.0",
    "swagger-ui-react": "^5.29.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.9",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "node-mocks-http": "^1.17.2",
    "prettier": "^3.6.2",
    "prisma": "^6.16.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
